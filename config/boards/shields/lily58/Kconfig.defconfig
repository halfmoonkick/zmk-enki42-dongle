    default y

# Check if the left half is the central

if ZMK_SPLIT_ROLE_CENTRAL
config ZMK_KEYBOARD_NAME
    default "LILY58 No Dongle"
        
endif # ZMK_SPLIT_ROLE_CENTRAL

