if SHIELD_LILY58 && !ZMK_SPLIT
config ZMK_KEYBOARD_NAME
    default "Lily58 Dongle"
endif

if SHIELD_LILY58_LEFT || SHIELD_LILY58_RIGHT || SHIELD_LILY58_DONGLE 

